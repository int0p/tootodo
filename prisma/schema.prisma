datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["darwin-arm64","windows","native"]
}

model Todo{
  uid String @id @default(uuid())
  createdAt DateTime @default(now())
  title String
  done Boolean @default(false)

}